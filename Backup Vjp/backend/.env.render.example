############################################################
# Laravel Ecommerce - Render + Supabase Environment Example #
# Copy to .env (do NOT commit real secrets)                 #
############################################################

# --- Core App ---
APP_NAME="Laravel Ecommerce"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://REPLACE-BACKEND.onrender.com
APP_KEY= # Generate locally: php artisan key:generate --show (DO NOT COMMIT REAL KEY)
APP_BASE_PATH=/
TZ=Asia/Ho_Chi_Minh

# --- Database (Supabase Postgres) ---
# Preferred single URL form:
DATABASE_URL=postgresql://postgres:POSTGRES_PASSWORD@db.REPLACE-SUPABASE-HOST.supabase.co:5432/postgres?sslmode=require
# If you prefer discrete vars uncomment below:
# DB_CONNECTION=pgsql
# DB_HOST=db.REPLACE-SUPABASE-HOST.supabase.co
# DB_PORT=5432
# DB_DATABASE=postgres
# DB_USERNAME=postgres
# DB_PASSWORD=REPLACE-PASSWORD
# DB_SSLMODE=require

# --- Frontend CORS ---
FRONTEND_URL=https://REPLACE-FRONTEND.vercel.app

# --- Stripe ---
STRIPE_SECRET=sk_test_your_stripe_secret_here
STRIPE_CURRENCY=usd
PRICE_CONVERT_VND_TO_USD_RATE=0.00004
# STRIPE_WEBHOOK_SECRET=whsec_REPLACE

# --- Cache / Session / Queue ---
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# --- Mail (development defaults; replace for production) ---
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME=Laravel

# --- Optional migration automation ---
# RUN_MIGRATIONS_ON_START=true
# DB_FRESH_MIGRATE=false

# --- Sanctum (if later using cookie auth) ---
# SANCTUM_STATEFUL_DOMAINS=REPLACE-FRONTEND.vercel.app
# SESSION_DOMAIN=REPLACE-FRONTEND.vercel.app

# --- Cloudinary (optional) ---
# CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME

# --- Logging ---
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info
