###############################################
# Laravel Ecommerce - Example Environment File #
# Copy to .env and replace values as needed     #
###############################################

# -------------------------------------------------
# Core App
# -------------------------------------------------
APP_NAME="Laravel Ecommerce"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000
APP_KEY=

LOG_CHANNEL=stack
LOG_LEVEL=debug

# -------------------------------------------------
# Database (MySQL default for local dev)
# -------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ecommerce_db
DB_USERNAME=root
DB_PASSWORD=

# Switch to PostgreSQL (e.g. Neon/Railway) by changing:
# DB_CONNECTION=pgsql
# DB_HOST=your-neon-host
# DB_PORT=5432
# DB_DATABASE=neondb
# DB_USERNAME=neondb_owner
# DB_PASSWORD=your_password
# Optionally: DATABASE_URL=postgresql://user:pass@host:5432/neondb?sslmode=require

# Quick SQLite fallback (no separate server):
# DB_CONNECTION=sqlite
# DB_DATABASE="database/database.sqlite"

# -------------------------------------------------
# Cache / Session / Queue
# -------------------------------------------------
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# -------------------------------------------------
# Mail (Mailpit in local dev)
# -------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="Laravel"

# -------------------------------------------------
# Frontend URL (CORS / Sanctum)
# -------------------------------------------------
FRONTEND_URL=http://localhost:5173

# -------------------------------------------------
# Stripe (Replace with your test key; never commit live keys)
# -------------------------------------------------
STRIPE_SECRET=sk_test_your_key_here
STRIPE_CURRENCY=usd
PRICE_CONVERT_VND_TO_USD_RATE=0.00004

# -------------------------------------------------
# Optional Redis (keep defaults if unused)
# -------------------------------------------------
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# -------------------------------------------------
# Misc
# -------------------------------------------------
APP_BASE_PATH=/

# Add any other service credentials below (Cloudinary, etc.)
# CLOUDINARY_URL=cloudinary://xxx:yyy@zzz

